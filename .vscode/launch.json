{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },

      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "program": "${workspaceFolder}/src/main.ts",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }